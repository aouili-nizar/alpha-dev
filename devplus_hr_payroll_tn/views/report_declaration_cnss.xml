<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_declaration_cnss">

			<t t-call="report.html_container">
				<t t-set="data_report_margin_top" t-value="12" />
				<t t-set="data_report_header_spacing" t-value="9" />
				<t t-set="data_report_dpi" t-value="110" />
				<t
					t-foreach="get_nb_page(data['form']['company_id'] , data['form']['fiscalyear_id'],data['form']['trimester'])"
					t-as="o">

					<div class="page"
						style="margin-top:10px;font-family: 'arial', serif;font-size:13px">

						<div class="row">
						<div class="col-xs-3 text-center" style="font-size:14px;font-family:Lucida Sans Unicode cursive">
								<strong>REPUBLIQUE TUNISIENNE</strong>
								<br />
								<strong>MINISTERE DES AFFAIRES SOCIALES</strong>
								<br />
							CAISSE NATIONALE DE SECURITE SOCIALE
							<br />
						</div>
						<div class="col-xs-8 text-center" style="font-size:28px;font-weight:bold;font-family:Lucida Sans Unicode cursive">
							<strong>DECLARATION TRIMESTRIELLE DES SALAIRES ET DES SALARIES
							</strong>
						</div>
						<br />
						<div class="col-xs-8 text-center" style="font-size:17px;font-family:Lucida Sans Unicode cursive">
							doit être remise à la caisse sous peine
							de pénalités dans les 15 premiers jours qui suivent le trimestre
						</div>
						</div>
						<br />

						<div class="row" >
							<div class="col-xs-3" style="padding-top:40px;padding-left:30px;font-family:Lucida Sans Unicode cursive;">
							<table class="table table-bordered"  style="font-size:15px;height:140px;border:3px solid black;font-weight:bold">
								<tr style="margin-top:-10px;">
									<td colspan="2">N° Employeur:
									<span t-esc="company.cnss" /></td>
								</tr>
								<tr>
									<td>
										BR:
									</td>
									<td>
										Trimestre:
									</td>
								</tr>
								<tr>
									<td>
										  Page N°:
											<span t-esc="o" />
									</td>
									<td>
										Année:
										<span t-esc="(data['form']['fiscalyear_id'])[1]" />
									</td>
								</tr>
							</table>
						</div>
							<div class="col-xs-3" style="padding-left=10px;padding-right:50px;padding-top:40px;font-family:Lucida Sans Unicode cursive">
							<table class="table table-bordered  text-center"  style="font-size:15px;height:140px;border:3px solid black;font-weight:bold">
								<tr>
									<td>
										Code d'exploitation
									</td>
								</tr>
								<tr>
									<td>
										Matricule fiscal
									</td>
								</tr>
							</table>
							</div>
						<div class="col-xs-6 text-center" style="padding-right:30px;">
							 <p style="font-weight:bold;font-size:20px;font-family:Lucida Sans Unicode cursive">NOM ET ADRESSE DE L’EMPLOYEUR</p>
							<table class="table table-bordered"  style="border:3px solid black;font-family:Lucida Sans Unicode cursive;font-size:20px">
								<tr>
									<td style="height:140px;padding-top:40px" class="text-center">
										<strong>
											STE ALPHA ENGINEERING TUNISIA SARL SA
											<br />
											69 Avenue des Martyrs - Sidi Bouzid
											<br />
										</strong>
									</td>
								</tr>
							</table>
						</div>
					</div>

						<div class="col-xs-12 ">

							<table class="table table-bordered"  style="font-size:17px; max-height:30%;border:3px solid black;font-family:Lucida Sans Unicode cursive" >
							 <thead>
								<tr>
									<th rowspan="2" class="text-center">N° Ordre:</th>
									<th rowspan="2" class="text-center">MATRICULE DE L'ASSURE
											<br/><div class="text-right">clé</div>
									 </th>

									<th rowspan="2" class="text-center">IDENTITITE DU SALAIRE(1)</th>
									<th rowspan="2" class="text-center">N° chez l'Emp</th>
									<th rowspan="2" class="text-center">Categ professionelle</th>
									<th colspan="3" class="text-center">REMUNERATION MENSULLE
										<br/><div class="text-right" style="font-weight: normal;">Reports des Montants</div>
									</th>
									<th rowspan="1" colspan="1" class="text-center">
										TOTAL GENERAL
									</th>
								</tr>

								<tr>
									<th class="text-center">1ᵉʳ mois
										<br/><div class="text-right">D</div>
									</th>
									<th class="text-center">2ème mois
										<br/><div class="text-right">D</div>
									</th>
									<th class="text-center">3ème mois
										<br/><div class="text-right">D</div>
									</th>

									<th class="text-center"></th>
								</tr>
            </thead>
								<tr
									t-foreach="get_page(data['form']['company_id'] , data['form']['fiscalyear_id'],data['form']['trimester'],o)"
									t-as="line">
									<td width="4%" >
										<span t-esc="line['num_line']" />
									</td>
									<td width="11%">
										<span t-esc="line['cnss']" />
									</td>
									<td width="30%" style="white-space: nowrap;">
										<span t-esc="line['name']" />
									</td>
									<td width="5%">
										<span t-esc="line['matricule']" />
									</td>
									<td width="7%">
										<span t-esc="line['matricule']" />
									</td>
									<td width="11%" class="text-center">
										<span t-if="line['mois1']">
											<span
												t-esc="formatLang(line['mois1'],digits=get_digits(dp='Montant Paie'))" />
										</span>
									</td>
									<td width="11%" class="text-center">
										<span t-if="line['mois2']">
											<span
												t-esc="formatLang(line['mois2'],digits=get_digits(dp='Montant Paie'))" />
										</span>

									</td>
									<td width="11%" class="text-center">
										<span t-if="line['mois3']">
											<span
												t-esc="formatLang(line['mois3'],digits=get_digits(dp='Montant Paie'))" />
										</span>
									</td>
									<td width="12%" class="text-center" >
										<span t-if="line['total']">
											<span
												 t-esc="formatLang(line['total'],digits=get_digits(dp='Montant Paie'))" />
										</span>
									</td>
								</tr>

							</table>

							</div>
						<br/>
						<div class="row">
							<div class="col-xs-8"/>
							<div class="col-xs-2" style="font-family:Lucida Sans Unicode cursive;font-size:20px" t-if="max(get_nb_page(data['form']['company_id'] , data['form']['fiscalyear_id'],data['form']['trimester']))==o">
								<strong>Total à reporter</strong>
							</div>
							<div class="col-xs-2">
							<table class="table table-bordered"
								t-if="max(get_nb_page(data['form']['company_id'] , data['form']['fiscalyear_id'],data['form']['trimester']))==o" style="font-size:11px;width:200px;max-height:20%;border:3px solid black;font-family:Lucida Sans Unicode cursive">
								<tr>
									<td class="text-center" style="height:70px">
										<strong>
											<span
												t-esc="formatLang(get_total(data['form']['company_id'] , data['form']['fiscalyear_id'],data['form']['trimester'])['montant_total'],digits=get_digits(dp='Montant Paie'))" />
										</strong>
									</td>
								</tr>
							</table>
						</div>
						</div>


						<div class="col-xs-6 text-left" style="font-family:Lucida Sans Unicode cursive"
							t-if="max(get_nb_page(data['form']['company_id'] , data['form']['fiscalyear_id'],data['form']['trimester']))==o">
							<strong>
								<u>Certifié sincère et conforme à nos documents comptables
									et
									arrêté à la somme de :(en toutes lettres)(2)
								</u>
							</strong>
							<u><span
								t-esc="(get_total(data['form']['company_id'] , data['form']['fiscalyear_id'],data['form']['trimester'])['montant_total_text'])" /></u>
								<br/>
								<br/>
							<strong>
								(1) l’identité doit être conforme à la carte d’assuré ou à
								l’extrait de naissance
							</strong>
							<br/>
							<strong>
								(2) L’arrêté doit correspondre au total des salaires
								déclarés
								pendant le trimestre (à indiquer sur la dernière page).
							</strong>
						</div>

						<div class="col-xs-6 text-center"
							t-if="max(get_nb_page(data['form']['company_id'] , data['form']['fiscalyear_id'],data['form']['trimester']))==o">
							<h5> Fait à......... le ........ </h5>
							<h5> Cachet et signature de l’Entreprise</h5>
							<h5> (sur toutes les pages) </h5>
						</div>

					</div>


				</t>
			</t>
		</template>
	</data>
</openerp>
